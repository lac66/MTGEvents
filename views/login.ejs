<!doctype html>

<html lang="en">

<head>
    <title>MTG Events: Login</title>
    <!-- Meta tag for keywords  -->
    <meta name="keywords" content="login">
    <!-- Meta tag for description  -->
    <meta name="description" content="Login for a more personalized experience">
    <!-- Meta tag for character encoding  -->
    <meta charset="UTF-8">
    <!--External Stylesheet -->
    <link rel="stylesheet" type="text/css" href="../resources/css/MTGEvents.css">
    <!-- JavaScript function declarations -->
    <script src="#"></script>
</head>

<body id="loginBody">
    <div id='layer'>
        <%- include("partials/header.ejs") %>

        <%- include("partials/navigation.ejs") %>

        <main>
            <div id="contentHolder">
                <h1>Login</h1>
                <h3>Signin to remember the battles you plan to fight in</h3>
                <form action="" method="POST">
                    <div class="formDiv">
                        <label for="username">Username</label>
                        <input type="text" name="username" id="username" placeholder="Email">
                    </div>
                    <div class="formDiv">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" placeholder="Password">
                    </div>
                    <div id='formDiv'>
                        <input type="submit" name="submit" id="loginSubmit" value="Login">
                    </div>
                </form>
            </div>
        </main>

        <%- include("partials/footer.ejs") %>
    </div>
</body>

</html>