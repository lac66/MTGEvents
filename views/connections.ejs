<!doctype html>

<html lang="en">

<head>
    <title>MTG Events: Connections</title>
    <!-- Meta tag for keywords  -->
    <meta name="keywords" content="all connections">
    <!-- Meta tag for description  -->
    <meta name="description" content="all connections page">
    <!-- Meta tag for character encoding  -->
    <meta charset="UTF-8">
    <!--External Stylesheet -->
    <link rel="stylesheet" type="text/css" href="../resources/css/MTGEvents.css">
    <!-- JavaScript function declarations -->
    <script src=""></script>
</head>

<body id="connectionsBody">
    <%- include("partials/header.ejs") %>

    <%- include("partials/navigation.ejs") %>

    <main>
        <h1>Events</h1>
        <% var topicType = []; %>
        <% data.database.forEach(function(item) { %>
        <%    if (!topicType.includes(item.topic)) { %>
        <%      topicType.push(item.topic); %>
        <%    } %>
        <% }); %>
        <% topicType.forEach(function(topicName) { %>
            <h2><%= topicName %> Tournaments</h2>
            <ul>
                <% data.database.forEach(function(item) { %>
                    <% if (item.topic == topicName) { %>
                        <% var link = "/connections/" + item.getId(); %>
                        <li><a href=<%= link %>><%= item.name %> - <%= item.date %></a></li>
                    <% } %>
                <% }); %>
            </ul>
        <% }) %>
    </main>

    <%- include("partials/footer.ejs") %>
</body>

</html>