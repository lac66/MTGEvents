<!doctype html>

<html lang="en">

<head>
    <title>MTG Events: Details</title>
    <!-- Meta tag for keywords  -->
    <meta name="keywords" content="connection details">
    <!-- Meta tag for description  -->
    <meta name="description" content="connection details page">
    <!-- Meta tag for character encoding  -->
    <meta charset="UTF-8">
    <!--External Stylesheet -->
    <link rel="stylesheet" type="text/css" href="../resources/css/MTGEvents.css">
    <!-- JavaScript function declarations -->
    <script src="../utilities/connectionPage.js"></script>
</head>

<body id="connectionBody">
    <%- include("partials/header.ejs") %>

    <%- include("partials/navigation.ejs") %>

    <main>
        <h1><%= data.connection.name %></h1>
        <img src="../resources/img/hostedBy.jpg" alt="" id="hostImg">
        <div>
            <p>Hosted by <%= data.connection.host %></p><p>Date: <%= data.connection.date.getMonth() + 1 %>/<%= data.connection.date.getDate() %>/<%= data.connection.date.getYear() + 1900 %></p>
            <% if (data.connection.date.getHours() < 13) { %>
                <p>Time: <%= data.connection.date.getHours() %>:<%= data.connection.date.getMinutes() %>0 AM</p>
            <% } else { %>
                <p>Time: <%= data.connection.date.getHours() - 12 %>:<%= data.connection.date.getMinutes() %>0 PM</p>
            <% } %>
            <p>Location: <%= data.connection.location %></p>
        </div>
        <h2>Details:</h2>
        <% if (data.connection.getTopic() == "Pro") { %>
            <h3>Qualifications</h3>
            <ul>
                <% data.connection.getDetails().split(",").forEach(function(item) { %>
                    <li><%= item %></li>
                <% }); %>
            </ul>
        <% } else { %>
            <div id='detailsHolder'>
                <p><%= data.connection.getDetails() %></p>
            </div>
        <% } %>
        <div id="btnHolder">
            <p>Will you join the fight?</p>
            <button type="button" id="btnYes" class="joinButton">Yes</button>
            <button type="button" id="btnNo" class="joinButton">No</button>
            <button type="button" id="btnMaybe" class="joinButton">Maybe</button>
        </div>
    </main>

    <%- include("partials/footer.ejs") %>
</body>

</html>